
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for the 'transactions' collection
    match /transactions/{transactionId} {
      // Allow users to read, update, and delete their own transactions
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow users to create new transactions for themselves
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Rule for the 'categories' collection
    match /categories/{categoryId} {
      // Allow users to read, update, and delete their own categories
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow users to create new categories for themselves
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Rule for the 'goals' collection
    match /goals/{goalId} {
       // Allow users to read, update, and delete their own goals
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
       // Allow users to create new goals for themselves
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
